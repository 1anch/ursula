# Synchronize glance images between controllers

SHELL=/bin/sh
PATH=/bin:/usr/bin

{% for host in groups['controller'] %}
{% if host != inventory_hostname %}
*/5 * * * * glance  flock -n /tmp/glance-image-sync.lock nice ionice -c3 rsync --archive --update --xattrs --bwlimit=50000 rsync://{{ hostvars[host][primary_interface]['ipv4']['address'] }}/glance/????????-????-????-????-???????????? /var/lib/glance/images/
{% endif %}
{% endfor %}
